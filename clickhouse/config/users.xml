<?xml version="1.0"?>
<yandex>
    <!-- 用户配置 -->
    <profiles>
        <!-- 默认配置（低内存优化） -->
        <default>
            <!-- 内存限制（根据2GB总内存调整） -->
            <max_memory_usage>500000000</max_memory_usage>  <!-- 500MB -->
            <max_memory_usage_for_user>500000000</max_memory_usage_for_user>  <!-- 500MB -->
            <max_memory_usage_for_all_queries>1000000000</max_memory_usage_for_all_queries>  <!-- 1GB -->

            <!-- 缓存设置 -->
            <use_uncompressed_cache>0</use_uncompressed_cache>

            <!-- 负载均衡 -->
            <load_balancing>random</load_balancing>

            <!-- 线程设置（针对2核CPU） -->
            <max_threads>2</max_threads>
            <max_insert_threads>1</max_insert_threads>
            <max_concurrent_queries_for_user>5</max_concurrent_queries_for_user>

            <!-- 执行限制 -->
            <max_execution_time>1800</max_execution_time>  <!-- 30分钟 -->
            <max_ast_depth>500</max_ast_depth>
            <max_ast_elements>5000</max_ast_elements>
            <max_expanded_ast_elements>50000</max_expanded_ast_elements>

            <!-- 外部处理限制（小内存环境） -->
            <max_bytes_before_external_group_by>100000000</max_bytes_before_external_group_by>  <!-- 100MB -->
            <max_bytes_before_external_sort>100000000</max_bytes_before_external_sort>  <!-- 100MB -->

            <!-- 禁用一些功能以节省内存 -->
            <allow_experimental_object_type>0</allow_experimental_object_type>
            <allow_experimental_decimal_type>0</allow_experimental_decimal_type>
            <allow_experimental_geo_types>0</allow_experimental_geo_types>
        </default>

        <!-- 只读配置 -->
        <readonly>
            <readonly>1</readonly>
            <max_memory_usage>200000000</max_memory_usage>  <!-- 200MB -->
            <max_threads>1</max_threads>
        </readonly>

        <!-- 写入优化配置 -->
        <write_optimized>
            <max_memory_usage>300000000</max_memory_usage>  <!-- 300MB -->
            <max_memory_usage_for_user>300000000</max_memory_usage_for_user>
            <max_threads>1</max_threads>
            <max_insert_threads>1</max_insert_threads>
            <max_bytes_before_external_group_by>50000000</max_bytes_before_external_group_by>  <!-- 50MB -->
            <max_bytes_before_external_sort>50000000</max_bytes_before_external_sort>  <!-- 50MB -->
        </write_optimized>

        <!-- 批处理配置 -->
        <batch>
            <max_memory_usage>800000000</max_memory_usage>  <!-- 800MB -->
            <max_threads>2</max_threads>
            <max_insert_threads>1</max_insert_threads>
        </batch>
    </profiles>

    <!-- 配额设置 -->
    <quotas>
        <!-- 默认配额 -->
        <default>
            <interval>
                <duration>3600</duration>
                <queries>100</queries>  <!-- 限制每小时查询数 -->
                <errors>10</errors>  <!-- 限制每小时错误数 -->
                <result_rows>10000000</result_rows>  <!-- 限制每小时返回行数 -->
                <read_rows>100000000</read_rows>  <!-- 限制每小时读取行数 -->
                <execution_time>3600</execution_time>  <!-- 限制每小时总执行时间 -->
            </interval>
        </default>

        <!-- 小配额（防止资源滥用） -->
        <small>
            <interval>
                <duration>60</duration>
                <queries>10</queries>
                <errors>2</errors>
                <result_rows>100000</result_rows>
                <read_rows>1000000</read_rows>
                <execution_time>60</execution_time>
            </interval>
        </small>
    </quotas>

    <!-- 用户列表 -->
    <users>
        <!-- 默认用户 -->
        <default>
            <password></password>
            <profile>default</profile>
            <quota>default</quota>
            <databases>
                <database>default</database>
            </databases>
        </default>

        <!-- 管理员用户 -->
        <admin>
            <password_sha256_hex>8c6976e5b5410415bde908bd4dee15dfb167a9c873fc4bb8a81f6f2ab448a918</password_sha256_hex>  <!-- admin -->
            <profile>default</profile>
            <quota>default</quota>
            <access_management>1</access_management>
            <databases>
                <database>*</database>
            </databases>
            <networks incl="networks" replace="replace">
                <ip>::/0</ip>
            </networks>
        </admin>

        <!-- 只读用户 -->
        <readonly_user>
            <password>readonly_pass</password>
            <profile>readonly</profile>
            <quota>small</quota>
            <databases>
                <database>*</database>
            </databases>
            <networks incl="networks" replace="replace">
                <ip>::/0</ip>
            </networks>
        </readonly_user>

        <!-- 数据写入用户 -->
        <write_user>
            <password>write_pass</password>
            <profile>write_optimized</profile>
            <quota>default</quota>
            <databases>
                <database>*</database>
            </databases>
            <networks incl="networks" replace="replace">
                <ip>::/0</ip>
            </networks>
        </write_user>

        <!-- 批处理用户 -->
        <batch_user>
            <password>batch_pass</password>
            <profile>batch</profile>
            <quota>default</quota>
            <databases>
                <database>*</database>
            </databases>
            <networks incl="networks" replace="replace">
                <ip>::/0</ip>
            </networks>
        </batch_user>
    </users>

    <!-- 网络设置 -->
    <networks>
        <ip>::/0</ip>
    </networks>
</yandex>